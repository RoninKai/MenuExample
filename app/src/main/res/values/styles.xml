<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/While</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--设置menu字体颜色-->
        <item name="actionMenuTextColor">@color/While</item>
        <item name="android:actionMenuTextColor">@color/While</item>
        <!--设置菜单栏图标颜色-->
        <item name="android:textColorSecondary">@color/While</item>
        <!--修改searchView样式-->
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <!--<item name="android:actionOverflowMenuStyle">@style/OverflowMenuStyle</item>-->
    </style>

    <!--toolbar搜索框的图标-->
    <style name="SearchViewStyle" parent="Base.Widget.AppCompat.SearchView">
        <item name="searchIcon">@mipmap/search</item>
    </style>

    <!--设置搜索框与返回按钮的间距-->
    <style name="ToolbarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <!--Toolbar溢出菜单的style-->
    <style name="OverflowMenuStyle">
        <!-- 是否覆盖锚点，默认为true，即盖住Toolbar -->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:layout_marginRight">5dp</item>
        <!-- 弹出层背景颜色 -->
        <item name="android:popupBackground">@color/colorPrimary</item>
        <!-- 弹出层垂直方向上的偏移，即在竖直方向上距离Toolbar的距离，值为负则会盖住Toolbar -->
        <item name="android:dropDownVerticalOffset">5dp</item>
        <!-- 弹出层水平方向上的偏移，即距离屏幕左边的距离，负值会导致右边出现空隙 -->
        <item name="android:dropDownHorizontalOffset">0dp</item>
        <!-- 设置弹出菜单文字颜色 -->
        <item name="android:textColor">@color/While</item>
    </style>

    <style name="CustomTabLayout">
        <!-- 改变指示器下标的颜色-->
        <item name="tabIndicatorColor">#2C97DE</item>
        <!-- 改变选中字体的颜色-->
        <item name="tabSelectedTextColor">#2C97DE</item>
        <!-- 改变未选中字体的颜色-->
        <item name="tabTextColor">#66000000</item>
    </style>

</resources>
